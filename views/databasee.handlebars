
<span class="EE"><a href="/repos/database">**</a></span>
<div class="caption">
    <h2>Trending repositories</h2>
    <form action="/repos/dateval" method="post">
    you will find repositories created since
    <input type="date" name="dateNewDb" id="dateNewDb" value={{dateValue}}>
    <input type="submit" value="apply">
</form>
<form action="/repos/add" method="post">
    <p><button name="forceSync">Force sync</button></p><br>
</form>
{{!-- <h3>all units</h3> --}}

</div>
{{#each newrepos}}
<div class="unit">
<p>
    Repo name: <span class="data">{{item_name}}</span>         
</p>
<p>
    Repo ID: <span class="data">{{item_id}}</span>
</p>
<p>
    description: <span class="data">{{description}}</span>
</p>

<p>
        <span>place:</span><span class="data"> {{id}}</span>
    Stars count: <span class="data">{{stargazers_count}}</span>
</p>
<p class="open">
<a href={{html_url}}>@open</a>
</p>

{{else}}
<p>No repos in database yet!</p>
<p>Push force sync to get repos</p>
{{/each}}
</div>

